@{
    ViewBag.Title = "Регистрация";
}
@model VDolgah.user

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    if (ViewBag.Error == true)
    {
        <style>
            input, textarea {
                border-color : red;
            }
            div.er {
                color :red;
            }
        </style>
    }
    Html.HiddenFor((x) => x.id);
    <table>
    <tr>
        <td> Email
        </td>
        <td>
        @Html.EditorFor((x) => x.email)
            </td>
    </tr>
    <tr>
        <td> Имя
        </td>
        <td>
        @Html.EditorFor((x) => x.name)
            </td>
    </tr>
    <tr>
        <td> Пароль
        </td>
        <td>
        @Html.PasswordFor((x) => x.password_hesh)
            </td>
    </tr>
    <tr>
        <td>
        </td>
        <td>
        <input type="submit"  value="Регистрация"/>
            </td>
    </tr>
    @if (ViewBag.Error == true)
    {
        <tr class="er">
           <td>
        </td> <td>
            @Html.Label("Пользователь с таким email уже существует") 
            </td>
        </tr>
    }
    </table>
}