@model VDolgah.user
@using VDolgah;
@{
    user user = Model as user;
    bool sessionUser = false;
    ViewBag.Title = "Персональный кабинет";
    if(Session["user"] == null)
    {
        Response.Redirect(Url.Action("Index", "Home"));
    }
    else if(user == null)
    {
        sessionUser = true;
        user = Session["user"] as user;
    }
}

@if (sessionUser)
{ 
    <div class ="create-group">
        @Html.ActionLink("Создать группу", "Create", "Group", null, new { @class = "btn btn-default" })
    </div>
    if (ViewBag.GroupList != null)
    {
        <div class="list-group group-list container">
            @foreach(VDolgah.Models.GroupWrapper group in ViewBag.GroupList)
            {
                <div class="list-group-item row group-list-item" onclick="location.href = '@(Url.Action("Index", "Group", new { group_id = group.Group.idgroups }))'">
                    <div class="col-xs-10">@group.Group.name</div>
                    <div class="col-xs-2 float-right"> <span style="float:right">@group.Group.users.Count </span></div>
                </div>
            }
        </div>
    }
}
else
{
    <p>account</p>
}
